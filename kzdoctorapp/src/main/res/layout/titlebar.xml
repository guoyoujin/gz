<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/titlebar_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/titlebar_tv_left"
        style="@style/TitleBaritem"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/tab_padding"
        android:drawableLeft="@mipmap/titlebarback"
        android:text="返回"/>

    <TextView
        android:id="@+id/titlebar_tv_center"
        style="@style/TitleBaritem"
        android:layout_weight="2"
        android:gravity="center"/>

    <TextView
        android:id="@+id/titlebar_tv_right"
        style="@style/TitleBaritem"
        android:drawableRight="@drawable/iconfont_right"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/title_marge"

        android:visibility="invisible"/>
</LinearLayout>