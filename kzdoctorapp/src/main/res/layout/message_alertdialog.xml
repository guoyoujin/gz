<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/tab_padding"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/message_iv_kzjieshao"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/iconfont_qita"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/message_iv_kzyiyuan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/iconfont_keai"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/message_iv_kzwenti"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/iconfont_xinshoushanglu"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/message_iv_aboutme"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/iconfont_xiaofeizhebaozhang"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/message_alertdialog_iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/iconfont_roundclosefill"/>

</LinearLayout>