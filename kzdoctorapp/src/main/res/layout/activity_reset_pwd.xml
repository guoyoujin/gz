<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/item_height"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/login_et_authcode"
            android:layout_weight="3"
            style="@style/InputStyle"
            android:inputType="phone"
            android:hint="验证码"/>
        <Button
            android:id="@+id/login_bt_getauthcode"
            android:layout_marginLeft="@dimen/item_height"
            android:layout_weight="5"
            style="@style/ButtonStyle"
            android:text="获取验证码"/>
    </LinearLayout>

    <EditText
        android:id="@+id/login_et_resetpwd"
        style="@style/InputStyle"
        android:inputType="text"
        android:hint="重置密码"/>

    <Button
        android:id="@+id/login_bt_reset"
        style="@style/ButtonStyle"
        android:text="完成"/>

</LinearLayout>