<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/home_vp_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/home_ll_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="10dp"
            >
        </LinearLayout>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/home_iv_kzjieshao"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@mipmap/home_img2"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/home_iv_kzyiyuan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@mipmap/home_img3"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/home_iv_kzwenti"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@mipmap/home_img4"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/home_iv_aboutme"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@mipmap/home_img5"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_img6"
            android:id="@+id/home_iv_add"/>
    </LinearLayout>



</LinearLayout>